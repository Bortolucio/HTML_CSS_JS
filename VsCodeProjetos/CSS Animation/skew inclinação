    <style>
       .box {
        background-color: #479083;
        border-radius: 3px;
        width: 100px;
        height: 100px;
        margin: 100px;
        color: #fff;
        display: table-cell;
        vertical-align: middle;
        text-align: center;
        font-size: 2em;
       }
       .box:hover {
        transform: skew(30deg, -10deg);
       }
       .box:hover p {
        transform: skew(-30deg, 10deg); /*inclinação contrária do texto para manter fixo*/
       }
    </style>
